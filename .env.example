# ===========================================
# Advanced RAG - Environment Configuration
# ===========================================
# Copy this file to .env and update values as needed.

# --- API Settings ---
APP_NAME=Advanced RAG API
APP_VERSION=1.0.0
DEBUG=false
LOG_LEVEL=INFO

# --- Server Settings ---
HOST=0.0.0.0
PORT=8000

# --- Ingestion Settings ---
INGESTION_DIR=./data

# --- Chunking Settings ---
CHUNK_SIZE=200

# --- Embedding Settings ---
EMBED_DIM=64
EMBED_MODEL=simple-hash

# --- Vectorstore Settings (Qdrant) ---
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=
QDRANT_COLLECTION_NAME=naive_collection
QDRANT_PREFER_GRPC=true

# --- Generation Settings ---
GENERATOR_MODEL=gpt2
GENERATOR_DEVICE=
GENERATOR_MAX_LENGTH=128
GENERATOR_TEMPERATURE=1.0

# --- RAG Settings ---
RAG_TOP_K=5
RAG_MAX_CONTEXT_DOCS=3
